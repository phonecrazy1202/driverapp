<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/registration_background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.summer.ram.cabsharing.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvStatus"
        android:textSize="25dp"
        android:paddingBottom="30dp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:text="Update your status"

        />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioid"
        android:layout_below="@id/tvStatus"

        >
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available"
        android:textSize="20dp"
        android:id="@+id/radio_available"
        android:theme="@style/radiostyle"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        />
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not available"
        android:textSize="20dp"
        android:id="@+id/radio_notavailable"
        />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below ="@id/radioid"
        android:id="@+id/dummy"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dummy"
        android:id="@+id/buttonLogout"
        android:layout_centerHorizontal="true"
        android:text="Logout"
        android:layout_marginTop="25dp"
        android:background="@drawable/register_button"
        android:textColor="#ffffff"
        android:textSize="20dp"

        />




</RelativeLayout>
